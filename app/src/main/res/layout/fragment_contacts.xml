<?xml version="1.0" encoding="utf-8"?>
<com.ziran.meiliao.im.view.ContactsView android:id="@+id/contacts_view"
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ffffff"
                                android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        >
        <ImageButton
            android:id="@+id/return_btn"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:background="@drawable/jmui_back_btn_bg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="用户列表"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/return_btn"
            android:textColor="@android:color/black"
            android:textSize="19sp"/>

        <ImageButton
            android:id="@+id/ib_goToAddFriend"
            android:layout_width="55dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/msg_title_bar_right_btn_bg"
            android:src="@drawable/add_friend"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <se.emilsjolander.stickylistheaders.StickyListHeadersListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:dividerHeight="0.1dp"
                    android:divider="@drawable/main_list_divider_line"
                    />

                <TextView
                    android:id="@+id/group_dialog"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rc_bg_toast"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="30.0dip"
                    android:visibility="invisible"/>

            </RelativeLayout>

        <com.ziran.meiliao.im.utils.sidebar.SideBar
            android:id="@+id/sidebar"
            android:layout_width="11.33dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"
            android:layout_marginBottom="33dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="2dp"
            android:visibility="visible"/>
    </FrameLayout>


</com.ziran.meiliao.im.view.ContactsView>
